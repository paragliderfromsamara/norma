<%= form_for @user, :url => "/create_user" do |f| %>
	<%= f.label :name, "Логин" %><br />
	<%= f.text_field :name %><br />
	<%= f.label :password, "Пароль" %><br />
	<%= f.password_field :password %><br />
	<%= f.label "Подтверждение" %><br />
	<%= f.password_field :password_confirmation %><br />
	<%= f.submit "Сохранить" %>
<% end %>
