<br />
<h3>Фотографии <%= @product.s_name %></h3>

<table>
<% @photos.each do |photo| %>
  <tr>
    <td><%= image_tag photo.link.thumb %></td>
    <td align = 'left'>
		
			<span style = 'padding-left: 50px;'><%= link_to 'Изменить описание', edit_photo_path(photo) %> <br /></span>
			<span style = 'padding-left: 50px;'><%= link_to 'Удалить', photo, :method => :delete, :data => { :confirm => 'Вы уверены что хотите удалить фотографию?' } %></span>
		
	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'К редактированию продукта', edit_product_path(@product) %>
